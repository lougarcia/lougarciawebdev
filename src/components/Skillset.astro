---
import SkillIconWrapper from "./SkillIconWrapper.astro"
import NextDarkIcon from "@/assets/icons/nextjs_icon_dark.svg"
import NuxtIcon from "@/assets/icons/nuxt.svg"
import CssIcon from "@/assets/icons/css.svg"
import JsIcon from "@/assets/icons/javascript.svg"
import LaravelIcon from "@/assets/icons/laravel.svg"
import PhpIcon from "@/assets/icons/php.svg"
import PhpDarkIcon from "@/assets/icons/php_dark.svg"
import AngularIcon from "@/assets/icons/angular.svg"
import AstroIcon from "@/assets/icons/astro.svg"
import WordpressIcon from "@/assets/icons/wordpress.svg"
import ReactDarkIcon from "@/assets/icons/react_dark.svg"
import ReactLightIcon from "@/assets/icons/react_light.svg"
import VueIcon from "@/assets/icons/vue.svg"
import CodeIgniterIcon from "@/assets/icons/codeigniter.svg"
---
<h4 class="text-xl text-center mb-4">Skillset</h4>
<div class="flex flex-row gap-4 max-w-min mx-auto mb-4">
    <SkillIconWrapper title="Vue JS">
        <VueIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="React JS">
        <ReactDarkIcon class="hidden dark:block" width={28} height={28} />
        <ReactLightIcon class="block dark:hidden" width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="Next JS">
        <NextDarkIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="Nuxt JS">
        <NuxtIcon width={28} height={28} />
    </SkillIconWrapper>
</div>
<div class="flex flex-row gap-4 max-w-min mx-auto mb-4">
    <SkillIconWrapper title="Astro">
        <AstroIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="CSS">
        <CssIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="Laravel">
        <LaravelIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="PHP">
        <PhpIcon width={28} height={28} class="block dark:hidden" />
        <PhpDarkIcon width={28} height={28} class="hidden dark:block" />
    </SkillIconWrapper>
</div>
<div class="flex flex-row gap-4 max-w-min mx-auto mb-4">
    <SkillIconWrapper title="Javascript">
        <JsIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="CodeIgniter">
        <CodeIgniterIcon width={28} height={28} class="text-[#e1491b]" />
    </SkillIconWrapper>
    <SkillIconWrapper title="Angular">
        <AngularIcon width={28} height={28} />
    </SkillIconWrapper>
    <SkillIconWrapper title="Wordpress">
        <WordpressIcon width={28} height={28}  />
    </SkillIconWrapper>
</div>